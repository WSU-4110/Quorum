@inherits LayoutComponentBase

@inject NavigationManager NavManager

<div class="main">
    <nav class="navbar navbar-expand-sm">
        <a class="navbar-brand" href="/">Quorum</a>
        <input class="form-control" id="searchbox" type="text" placeholder="Search" @bind="@query" aria-label="Search">
        <button type="button" class="btn btn-light" @onclick="@HandleValidSubmitQuorum">Search Quorum</button>
        <button type="button" class="btn btn-light" @onclick="@HandleValidSubmitThread">Search Thread</button>
        <div class="login-display align-items-center">
            <LoginDisplay />
        </div>
    </nav>
    <div class="content px-4">
        @Body
    </div>
    <footer>
        <hr />
        <div class="text-muted">
            ©2020 Quorum
        </div>
    </footer>
</div>

@code{
    public string query;

    private void HandleValidSubmitQuorum()
    {
        NavManager.NavigateTo("/squorum/" + query);
    }

    private void HandleValidSubmitThread()
    {
        NavManager.NavigateTo("/sthread/" + query);
    }
}
